@model AITResearch.ViewModels.LoginFormViewModel
@{
    ViewBag.Title = "Login";
}

<div class="login">
    <div class="login-title">
        <h2 class="white-txt">Login</h2>
    </div>

    <div class="login-body">
        <form method="post">
            <div>
                @Html.ValidationSummary(false,"", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control center", @placeholder = "Username" })
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control center", @placeholder = "Password", @type = "password" })
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-login" type="submit">Login</button>
            </div>
        </form>
    </div>
</div>


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}