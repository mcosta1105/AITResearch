@model AITResearch.ViewModels.LoginFormViewModel
@{
    ViewBag.Title = "Login";
}

<div class="login">
    <div class="login-title">
        <h2 class="white-txt">Login</h2>
    </div>

    <div class="login-body">
        <form>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control center", @placeholder = "Username" })
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control center", @placeholder = "Password" })
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="text-center">
                <a href="@Url.Action("Admin", "Admin")" class="btn btn btn-login">Log In</a>
            </div>
        </form>
    </div>
</div>