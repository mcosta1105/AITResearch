@model AITResearch.ViewModels.RegisterFormViewModel

@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row">
        <h2 class="white-txt">Register</h2>
        <form method="post">
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "white-txt" })
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "white-txt" })
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DoB, new { @class = "white-txt" })
                @Html.TextBoxFor(m => m.DoB, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.DoB, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone, new { @class = "white-txt" })
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "text-danger" })
            </div>
            <button class="btn btn-primary">Register</button>
            <p class="white-txt">or</p>
        </form>
        <button class="btn btn-primary" onclick="window.location='@Url.Action("Anonymous")'">Answer as Anonymous</button>
    </div>
</div>


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}