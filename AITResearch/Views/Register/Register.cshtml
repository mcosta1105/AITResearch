@model AITResearch.ViewModels.RegisterFormViewModel

@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row">
        <h2 class="white-txt">Register</h2>
        <form>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "white-txt" })
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "white-txt" })
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DoB, new { @class = "white-txt" })
                @Html.TextBoxFor(m => m.DoB, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone, new { @class = "white-txt" })
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>
            <button class="btn btn-primary">Register</button>
            <p class="white-txt">or</p>
        </form>
        <button class="btn btn-primary" onclick="window.location='@Url.Action("Survey", "Survey")'">Answer as Anonymous</button>
    </div>
</div>
