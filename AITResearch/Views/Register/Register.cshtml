@model AITResearch.ViewModels.RegisterFormViewModel

@{
    ViewBag.Title = "Register";
}


<div class="register">
    <div class="register-title">
        <h2 class="white-txt">Register</h2>
    </div>
    <div class="register-body">
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control center", @placeholder = "First Name" })
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "text-danger" })
                </div>                
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control center", @placeholder = "Last Name" })
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.DoB, new { @class = "form-control center", @placeholder = "Date of Birth" })
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.DoB, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control center", @placeholder = "Phone" })
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-register">Register</button>
            </div>
        </form>
        <div class="text-center">
            <p class="white-txt">or</p>
        </div>
        <div class="text-center">
            <button class="btn btn-register" onclick="window.location='@Url.Action("Anonymous")'">Answer as Anonymous</button>
        </div>
        </div>
    </div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
